BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_distance
            font_size: 48
#            on_text: app.handle_calculation(self.text)
            size_hint_x: 0.75
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_distance.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_distance.text, -1)
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Convert miles to km"
            font_size: 48
            on_press: app.handle_calculation(input_distance.text)
        Label:
            id: output_label
            font_size: 48
            text: app.kilometres